@model NewMovieDenemesi.Models.PagesModel.Sınıflar.Comments

@{

    Layout = "~/Views/Shared/_Deneme.cshtml";
}
<h2>BlogDetail</h2>

<!--post-single-->
<section class="post-single">
    <div class="container-fluid ">
        <div class="row ">
            <div class="col-lg-12">
                <!--post-single-image-->



                <div class="post-single-body">
                    <!--post-single-title-->
                    <div class="post-single-title">
                        @foreach (var x in Model.Deger1)
                        {
                            <center><h1>@x.Title</h1></center>
                        }

                        <ul class="entry-meta">
                            <li class="post-author-img"><img src="~/Content/Admin/assets/img/author/1.jpg" alt=""></li>
                            <li class="post-author"> <a href="author.html">Meriam Smith</a></li>
                            <li class="entry-cat"> <a href="blog-layout-1.html" class="category-style-1 "> <span class="line"></span> Livestyle</a></li>
                            <li class="post-date"> <span class="line"></span> february 10 ,2022</li>
                        </ul>

                    </div>



                    <!--post-single-content-->


                    <div class="post-single-content">
                        @foreach (var x in Model.Deger1)
                        {<img src="@x.Image" alt="Alternate Text" style="margin-bottom:20px" />


                            <p>

                                @x.Contents

                            </p>
                        }

                    </div>

                   

                    <div class="quote">
                        <div>
                            <i class="las la-quote-left"></i>
                        </div>
                        <div>
                            <p>

                            </p>
                            <small>Henry David Thoreau.</small>
                        </div>

                    </div>



                    
                </div>

                <!--post-single-bottom-->
                <div class="post-single-bottom">


                </div>


                <!--post-single-Ads-->
                <div class="post-single-ads ">

                </div>

                <!--post-single-comments-->
                @*<div class="post-single-comments">*@
                <!--Comments-->

                <div class="row mt-5">
                    <div class="col-12">
                        <h4>Yorumlar</h4>
                        <hr />
                    </div>
                    <h4> Comments</h4>
                    @foreach (var comment in Model.Deger2)
                    {
                        <div class="col-12 card mb-1">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="row">
                                        <div class="col-12 p-3">
                                            <img src='~/Content/Admin/assets/img/author/unknown.jpg ' width="80" style="border-radius:50%" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-10">
                                    <b>@comment.KullaniciAdi</b>

                                    <p>@comment.Comment</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="col-12 card mt-2">
                        <div class="row p-3">
                            <div class="col-12">
                                <h3>Yorum Yap</h3>
                                <hr />
                            </div>

                            @Html.Action("YorumYap", "AdminBlog")
                       
                        </div>
                    </div>
                </div>
           
            </div>
        </div>
    </div>
    

</section>

